{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "tekton": {
    "fileMatch": ["\\.yaml$", "\\.yml$"],
    "includePaths": [
      ".tekton/**",
      "pipeline/**",
      "task/**"
    ]
  },
  "prConcurrentLimit": 1,
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update environment image version",
      "managerFilePatterns": ["pipeline/build_rpm_package.yaml"],
      "matchStrings": [
        "default: images\\.paas\\.redhat\\.com\\/brew\\/rpmbuild-pipeline-environment-container@sha256:(?<currentValue>\\w*)"
      ]
    }
  ]
}
